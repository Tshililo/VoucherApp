<body>

    <!-- END nav -->
   

    <div id="blog" class="site-section">
        <div class="container">
            <h3>Go Cart</h3>
            <br />
            <div class="row">
                <div class="col-md-8">

                    <label for="Searchbar">Enter Voucher Code (Search)</label>
                    <input type="text" class="form-control" id="Searchbar">

                    <label for="Names">Name and Surname</label>
                    <input type="text" class="form-control" id="Names">


                    <label for="Email">Email</label>
                    <input type="text" class="form-control" id="Email" required>


                    <label for="Contact">Contact No</label>
                    <input type="text" class="form-control" id="Contact" required>


                    <label for="NoOfRides">No of Rides</label>
                    <input type="number" class="form-control" id="NoOfRides" required>

                    <label for="DateTime">Date</label>
                    <input type="date" class="form-control" id="DateTime">

                    <label for="NoOfPeople">No of People</label>
                    <input type="number" class="form-control" id="NoOfPeople">


                    <label for="OccasionId">Occasion</label>
                    <select id="OccasionId" class="form-control" name="OccasionId">
                        <option value="WeekDay">Week Day</option>
                        <option value="Weekend">Weekend</option>
                    </select>

                    <label for="AgeGroupId">Age Group</label>
                    <select id="AgeGroupId" class="form-control" name="AgeGroupId">
                        <option value="Youth">Under 12</option>
                        <option value="Elder">Adults</option>
                    </select>

                    <br />
                    <input type="button" id="Request" class="form-control" onclick="GenerateVoucher()" value="Generate" name="Request">

                </div> <!-- .col-md-8 -->
                    <div class="col-md-4 sidebar">
                        <div class="sidebar-box">
                            <form action="#" class="search-form">
                                <div class="form-group">
                                    <span class="icon fa fa-search"></span>
                                    @*<input type="text" class="form-control" placeholder="Type a keyword and hit enter">*@
                                </div>
                            </form>
                        </div>
                        <div class="sidebar-box">
                            <div class="categories">

                                <input type="text" class="form-control" id="Searchbar">
                                <li><a href="#" onclick="OnROB()">Riding own Bike <span>(10)</span></a></li>
                                <li><a href="#" onclick="OnGocart()">Gokart Rental <span>(30)</span></a></li>
                                <li><a href="#">Quad Rental <span>(18)</span></a></li>
                            </div>
                        </div>

                    </div>
                </div>

        </div>
    </div>


    <!-- loader -->
    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>

    <script src="js/jquery.min.js"></script>
    <script src="js/jquery-migrate-3.0.1.min.js"></script>

    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.easing.1.3.js"></script>
    <script src="js/jquery.waypoints.min.js"></script>
    <script src="js/jquery.stellar.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/bootstrap-datepicker.js"></script>
    <script src="js/jquery.fancybox.min.js"></script>

    <script src="js/aos.js"></script>
    <script src="js/jquery.animateNumber.min.js"></script>
    <script src="js/main.js"></script>
    <script>
        function OnROB()
        {
            window.location.href = "/Home/GetEdit?Id=" + "ROB";
        }
        function OnGocart() {
            window.location.href = "/Home/GetEdit?Id=" + "Gocart";
        }

        function myFunction()
        {

        }
        function GenerateVoucher() {

            var NamesId = document.getElementById("Names").value;


            var Email = document.getElementById("Email").value;
            var Contact = document.getElementById("Contact").value;
            var NoOfRides = document.getElementById("NoOfRides").value;
            var NoOfPeople = document.getElementById("NoOfPeople").value;

            var e = document.getElementById("AgeGroupId");
            var AgeGroupValue = e.options[e.selectedIndex].value;
            var numberofplates = 0;
            var ee = document.getElementById("OccasionId");
            var OccasionIdValue = ee.options[ee.selectedIndex].value;

            var DateTime = document.getElementById("DateTime").value;
            

            var MyIdInfo = NamesId + "," + Email + "," + Contact + "," + NoOfRides + "," + NoOfPeople
                + "," + AgeGroupValue + "," + OccasionIdValue + "," + DateTime + "," + "GoCart" + "";

            if (Email == "") {

                alert("Please enter Email");
                return;
            }

            if (Contact == "") {

                alert("Please enter phone no.");
                return;
            }

            if (NoOfRides == "") {

                alert("Please enter No Of Rides");
                return;
            }

            window.location.href = "/Home/SavePayments?PeopleId=" + MyIdInfo;

        }
    </script>

</body>
</html>